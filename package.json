    "dotenv": "^10.0.0",
    "dotenv-load": "^2.0.0",
    "np": "*",
    "rollup": "^2.56.3",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.3",
    "typescript": "^4.4.3"
